<!-- views/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Post</title>
  <link rel="stylesheet" href="/styles.css"> 
</head>
<body>

  <form action="/posts/<%= post._id %>" method="POST">
    <input type="hidden" name="_method" value="PUT"> <!-- Using method override for PUT request -->
    <input type="text" name="title" placeholder="Title" value="<%= post.title %>" required>
    <textarea name="content" placeholder="Content" required><%= post.content %></textarea>
    <button type="submit">Update Post</button>
  </form>

</body>
</html>
